<!--//banner-->
<!--content-->
<div class="content">
    <div class="container">
        <div class="content-top">
            <div class="content-top1">
                <div class="col-md-3 col-md2 animated wow fadeInLeft" data-wow-delay=".5s">
                    <div class="col-md1 simpleCart_shelfItem">
                        <a asp-action="Detail" asp-route-id="@Model.ElementAt(5)["ID"]">
                            <img class="img-responsive" src= @Model.ElementAt(5)["imageSrc"] alt="" />
                        </a>
                        <h3><a asp-action="Detail" asp-route-id="ID">@Model.ElementAt(5)["Name"]</a></h3>
                        <div class="price">
                            <h5 class="item_price">@Model.ElementAt(5)["Price"]</h5>
                            <a href="#" class="item_add">Add To Cart</a>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
                <div class="col-md-6 animated wow fadeInDown animated" data-wow-delay=".5s" style="visibility: visible; animation-delay: 0.5s; animation-name: fadeInDown;">
                    <div class="col-md3">
                        <div class="up-t">
                            <h3>Flat 50% Offer</h3>
                        </div>
                    </div>
                </div>
                <div class="col-md-3 col-md2 animated wow fadeInRight" data-wow-delay=".5s">
                    <div class="col-md1 simpleCart_shelfItem">
                        <a asp-action="Detail" asp-route-id="@Model.ElementAt(6)["ID"]">
                            <img class="img-responsive" src=@Model.ElementAt(6)["imageSrc"] alt="" />
                        </a>
                        <h3><a asp-action="Detail" asp-route-id="ID">@Model.ElementAt(6)["Name"]</a></h3>
                        <div class="price">
                            <h5 class="item_price">@Model.ElementAt(6)["Price"]</h5>
                            <a href="#" class="item_add">Add To Cart</a>
                            <div class="clearfix"> </div>
                        </div>
                    </div>
                </div>
                <div class="clearfix"> </div>
            </div>
            <div class="content-top1">
                @for(int i = 1; i<5; i++)
                {
                    Dictionary<string,object> product = Model.ElementAt(i);
                    <div class="col-md-3 col-md2 animated wow fadeInLeft" data-wow-delay=".5s">
                        <div class="col-md1 simpleCart_shelfItem">
                            <a asp-action="Detail" asp-route-id="@product["ID"]">
                                <img class="img-responsive" src=@product["imageSrc"] alt="" />
                            </a>
                            <h3><a asp-action="Detail" asp-route-id="@product["ID"]">@product["Name"]</a></h3>
                            <div class="price">
                                <h5 class="item_price">@product["Price"]</h5>
                                <a class="item_add">Add To Cart</a>
                                <div class="clearfix"> </div>
                            </div>
                        </div>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
